<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_img_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_border_color="@color/gray_border"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/gray_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/search_txt_username"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:text="@string/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search_txt_name"
        app:layout_constraintStart_toEndOf="@+id/search_img_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_txt_name"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:text="@string/username"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_img_user"
        app:layout_constraintTop_toBottomOf="@+id/search_txt_username" />

</androidx.constraintlayout.widget.ConstraintLayout>